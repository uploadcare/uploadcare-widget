{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  },
  "extends": [
    "uploadcare",
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],
  "plugins": ["flowtype", "react"],
  "rules": {
    "react/no-unknown-property": [2, { "ignore": ["class"] }]
  }
}
