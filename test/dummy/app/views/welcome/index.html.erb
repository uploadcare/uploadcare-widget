<p><div>Preview:</div><span id="last-preview"></span></p>
<p><div>CDN:</div><span id="last-cdn"></span></p>
<ul id="events"></ul>
<script>
jQuery(function($) {
  var log = function(text) {
    var time = (new Date()).toLocaleTimeString();
    $('<li>').appendTo('#events').text(time + ' ' + text);
  };
  var widgets = uploadcare.initialize();
  for (var i = 0; i < widgets.length; i++) {
    widgets[i].onChange.add(function(file) {
      $('#last-preivew, #last-cdn').empty();
      if (file) {
        file.preview('#last-preview');
        file.done(function(info) {
          if (info.isImage) {
            var ri = uploadcare.resizableImage(info.cdnUrl);
            ri.done(function(el) {
              $('#last-cdn').html(el);
            });
          }
          log('change: ' + info.uuid);
        });
      } else {
        log('change: (empty)');
      }
    });
  }
});
</script>
